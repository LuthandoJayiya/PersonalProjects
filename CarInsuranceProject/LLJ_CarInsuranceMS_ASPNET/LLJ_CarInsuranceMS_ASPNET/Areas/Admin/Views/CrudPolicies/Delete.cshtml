@model LLJ_CarInsuranceMS_ASPNET.Models.Policy
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center"><i class="fa fa-trash"></i> Delete Policy</h1>
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4><i class="fa fa-info-circle"></i> Policy Details</h4>
                <hr />
                <form asp-area="Admin" asp-controller="CrudPolicies" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="PolicyId" />
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fa fa-id-badge"></i> @Html.DisplayNameFor(model => model.PolicyId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PolicyId)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-file-alt"></i> @Html.DisplayNameFor(model => model.PolicyType)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PolicyType)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-tag"></i> @Html.DisplayNameFor(model => model.PolicyName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PolicyName)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-shield-alt"></i> @Html.DisplayNameFor(model => model.Coverage)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Coverage)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Premium)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Premium)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.ExpirationDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ExpirationDate)
                    </dd>
                    <dt class="col-sm-4">
                        <i class="fa fa-calendar-plus"></i> @Html.DisplayNameFor(model => model.CreationDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CreationDate)
                    </dd>
                </dl>

                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fa fa-arrow-left"></i> No!! Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
