@model IEnumerable<LLJ_CarInsuranceMS_ASPNET.Models.PotentialCustomer>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h1 class="text-center">Customer Details</h1>
<hr />

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.CustomerName)</h5>
                        <p class="card-text">
                            <strong>ID:</strong> @Html.DisplayFor(modelItem => item.CustomerId)<br />
                            <strong>Phone:</strong> @Html.DisplayFor(modelItem => item.CustomerPhone)<br />
                            <strong>Email:</strong> @Html.DisplayFor(modelItem => item.CustomerEmail)<br />
                            <strong>City:</strong> @Html.DisplayFor(modelItem => item.CustomerCity)<br />
                            <strong>Country:</strong> @Html.DisplayFor(modelItem => item.CustomerCountry)<br />
                            <strong>Username:</strong> @Html.DisplayFor(modelItem => item.IdentintyUsername)
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="text-center mt-2">
    <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">
        <i class="fa fa-home"></i> Back to Home
    </a>
</div>
