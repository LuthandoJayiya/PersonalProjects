
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ClaimSurveyor/Views/_SurveyorLayout.cshtml";
}

<style>
    body {
        background-color: #2c2c2c;
        color: #ffffff;
    }
    .sidebar {
        background-color: #3a3a3a;
        height: 100vh;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        padding-top: 1rem;
    }
    .sidebar .nav-link {
        color: #ffffff;
    }
    .sidebar .nav-link.active {
        background-color: #495057;
    }
    .main-content {
        margin-left: 200px;
    }
    .card {
        background-color: #444;
        border: none;
    }
    .card .card-title, .card .card-text {
        color: #ffffff;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .settings-icon {
        position: absolute;
        bottom: 1rem;
        left: 1rem;
        font-size: 1.5rem;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-clipboard-list"></i> Claims
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-file-alt"></i> Policies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-folder-open"></i> Applications
                        </a>
                    </li>
                </ul>
                <a href="#" class="settings-icon">
                    <i class="fas fa-cog"></i>
                </a>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
            <h1 class="h2 text-center">Surveyor Dashboard</h1>
            <hr />
            <div class="row mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-clipboard-list fa-5x mb-3"></i>
                            <h5 class="card-title">View Claims</h5>
                            <a href="@Url.Page("/Claims")" class="btn btn-primary">
                                <i class="fas fa-eye"></i> View Claims
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-file-alt fa-5x mb-3"></i>
                            <h5 class="card-title">View Policies</h5>
                            <a href="@Url.Page("/Policies")" class="btn btn-primary">
                                <i class="fas fa-eye"></i> View Policies
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-folder-open fa-5x mb-3"></i>
                            <h5 class="card-title">View Applications</h5>
                            <a href="@Url.Page("/Applications")" class="btn btn-primary">
                                <i class="fas fa-eye"></i> View Applications
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
