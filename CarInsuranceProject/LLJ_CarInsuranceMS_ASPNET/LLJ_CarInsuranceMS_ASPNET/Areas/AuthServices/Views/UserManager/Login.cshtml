@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LLJ_CarInsuranceMS_ASPNET.Areas.AuthServices.Models.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/AuthServices/Views/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mt-5">
                <div class="row no-gutters">
                    <div class="col-md-6">
                        <img src="~/images/car-png-39057.png" class="card-img" alt="Login Image">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h2 class="card-title text-center"><i class="fas fa-user"></i> Login</h2>

                            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                            <form asp-area="AuthServices" asp-controller="UserManager" asp-action="Login" method="post">
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" asp-for="UserName" id="UserName" name="UserName" value="@TempData["POSTRegUserUserName"]" class="form-control" placeholder="Username" required>
                                    </div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        </div>
                                        <input type="password" asp-for="Password" class="form-control" id="Password" name="Password" placeholder="Password" required>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-sign-in-alt"></i> Login
                                    </button>
                                    <a href="~/AuthServices/UserManager/Register" class="btn btn-secondary ml-2">
                                        <i class="fas fa-user-plus"></i> Register
                                    </a>
                                </div>
                            </form>

                            <div class="text-center mt-3">
                                <a href="~/Home/Index" class="btn btn-secondary">
                                    <i class="fas fa-home"></i> Back to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
